# Production Environment Variables

# Django
DJANGO_SECRET_KEY=change-me-to-a-secure-random-value
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=airbnb_production
DB_USER=airbnb_prod_user
DB_PASSWORD=change-this-strong-password
DB_HOST=db
DB_PORT=5432

# Celery with RabbitMQ (AMQP)
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
CELERY_BROKER_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@rabbitmq:5672//
CELERY_RESULT_BACKEND=rpc://

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Redis (optional, if you switch back)
REDIS_URL=redis://redis:6379/0

# Gunicorn
WEB_CONCURRENCY=4
GUNICORN_TIMEOUT=120

# Misc
TIME_ZONE=UTC
LANGUAGE_CODE=en-us
